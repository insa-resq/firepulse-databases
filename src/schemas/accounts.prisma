model User {
    id          String       @id @default(cuid(2))
    createdAt   DateTime     @default(now())
    updatedAt   DateTime     @updatedAt
    email       String       @unique
    password    String
    role        UserRole
    avatarUrl   String
    stationId   String
    station     FireStation  @relation(fields: [stationId], references: [id], onDelete: Cascade)
    firefighter Firefighter?

    @@index([role])
    @@index([stationId])
    @@schema("accounts")
}

enum UserRole {
    ADMIN
    ALERT_MONITOR
    PLANNING_MANAGER
    FIREFIGHTER

    @@schema("accounts")
}
