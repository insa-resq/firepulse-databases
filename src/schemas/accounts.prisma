model User {
    id          String       @id @default(cuid(2))
    createdAt   DateTime     @default(now())
    updatedAt   DateTime     @updatedAt
    email       String       @unique
    password    String
    role        UserRole
    name        String?
    avatarUrl   String?
    firefighter Firefighter?

    @@index([role])
    @@schema("accounts")
}

enum UserRole {
    ADMIN
    ALERT_MONITOR
    PLANNING_MANAGER
    FIREFIGHTER

    @@schema("accounts")
}
